# =============================================================================
# Telegram Quiz NFT Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL credentials
POSTGRES_USER=quizbot
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=telegram_quiz
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL for SQLAlchemy (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://quizbot:changeme_secure_password@localhost:5432/telegram_quiz

# Database pool settings (optional, defaults will be used if not set)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Redis URL for caching and session storage
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# TON Blockchain Configuration (Phase 3)
# -----------------------------------------------------------------------------
# TON API key from tonconsole.com or tonapi.io
TON_API_KEY=your_ton_api_key_here

# TON network: testnet or mainnet
TON_NETWORK=testnet

# NFT Collection smart contract address (deploy in Phase 3)
NFT_COLLECTION_ADDRESS=

# TON wallet mnemonic for minting (24 words, KEEP SECRET!)
TON_WALLET_MNEMONIC=

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT token signing (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (True for development, False for production)
DEBUG=True

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Timezone
TIMEZONE=UTC

# -----------------------------------------------------------------------------
# File Storage Configuration
# -----------------------------------------------------------------------------
# IPFS gateway for NFT metadata and images (Phase 3)
IPFS_API_URL=https://api.pinata.cloud
IPFS_API_KEY=
IPFS_SECRET_KEY=

# Alternative: TON Storage
TON_STORAGE_ENABLED=False

# -----------------------------------------------------------------------------
# Payment Configuration (Phase 3)
# -----------------------------------------------------------------------------
# Telegram Stars payment
STARS_ENABLED=True

# TON payment settings
TON_PAYMENT_ENABLED=False
NFT_MINT_PRICE_TON=0.1

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Quiz submissions per day per user
QUIZ_LIMIT_PER_DAY=10

# NFT mints per day per user
MINT_LIMIT_PER_DAY=5

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of Telegram user IDs who have admin access
ADMIN_TELEGRAM_IDS=123456789,987654321

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Google Analytics or similar
ANALYTICS_ID=

# -----------------------------------------------------------------------------
# External Services (Optional)
# -----------------------------------------------------------------------------
# Webhook URL for TON payment confirmations
WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/ton

# Webhook secret for signature verification
WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
# Auto-reload on code changes (development only)
AUTO_RELOAD=True

# Show detailed error messages (development only)
SHOW_ERROR_DETAILS=True

# Database echo SQL queries (development only)
DB_ECHO=False
